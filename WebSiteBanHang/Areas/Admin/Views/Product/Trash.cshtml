

@model IEnumerable<WebSiteBanHang.Context.Product>
@{
    ViewBag.Title = "Trash";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}


    <link href="~/Content/css/jquery.dataTables.min.css" rel="stylesheet" />



    <script src="~/Content/js/jquery.dataTables.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#myTable').DataTable();
        });
    </script>

<!-- Content Wrapper. Contains page content 

    <!-- Main content -->
    <section class="content my-1">

        <!-- Default box -->
        <div class="card">
            <div class="card-header">
                <div class="row">
                    <div class="col-md-6">
                        <strong class="text-danger">Thùng rác Sản phẩm</strong>
                    </div>
                    <div class="col-md-6 text-right">
                        <a href="@Url.Action("Index", "Product")" class="btn btn-sm btn-info"><i class="fas fa-arrow-left"></i> Quay lại</a>
                    </div>
                </div>
            </div>
            <div class="card-body">

                <table class="table table-bordered table-striped" id="myTable">
                    <!-- chueyn sac doi tuong-->
                    <thead>
                        <tr>
                            <th class="text-center" style="width:20px">#</th>
                            <th>
                                @Html.DisplayNameFor(model => model.Name) <!--lay tu models-->
                            </th>
                            <th class="text-center">
                                Slug <!-- tu dat ten-->
                            </th>

                            <th class="text-center">
                                Ngày Tạo
                            </th>

                            <th class="text-center" style="width:100px">Chức Năng</th>
                            <th class="text-center" style="width:20px">ID</th>
                        </tr>
                    </thead>

                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td><input type="button" name="checkId" value="" /></td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Slug)
                                </td>

                                <td class="text-center">
                                    @Html.DisplayFor(modelItem => item.CreatedOnUtc) <!-- du liệu ơ dươi-->
                                </td>

                                <td class="text-center">
                                    <a href="@Url.Action("ReTrash","Product",new { id = item.Id })" class="btn btn-sm btn-info my-2"><i class="fas fa-undo-alt"></i></a>

                                    <a href="@Url.Action("Delete","Product",new { id = item.Id })" class="btn btn-sm btn-danger my-2"><i class="fas fa-trash"></i></a>
                                    <!-- DelTrash xóa luôn khỏi csdl -->

                                </td>
                                <td>
                                    @item.Id
                                </td>
                            </tr>
                        }
                    </tbody>

                </table>
            </div>
        </div>
        <!-- /.card -->

    </section>
    <!-- /.content -->

<!-- /.content-wrapper

    -->
