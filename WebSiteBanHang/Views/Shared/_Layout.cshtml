                        <li class="nav-item">
                            <a class="nav-link" href="#">Về chúng tôi</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="~/san-pham-giam-gia">Sản Phẩm Giảm Giá</a>
                        </li>
                    </ul>
