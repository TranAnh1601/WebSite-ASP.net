@model IEnumerable<WebSiteBanHang.Context.Product>
@{
    ViewBag.Title = "Sale";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="padding-bottom-sm">

    <header class="section-heading heading-line">
        <h4 class="title-section text-uppercase">Sản phẩm Khuyến mãi</h4>
    </header>
  
    <div class="row row-sm">

        @foreach (var item in Model)
        {
            var urlDetail = "san-pham/" + "/" + item.Slug + "/" + item.Id;
            <div class="col-xl-2 col-lg-3 col-md-4 col-6">
                <div class="card card-sm card-product-grid">
                    <a href="@urlDetail" class="img-wrap"> <img src="~/Content/images/items/@item.Avatar"> </a>
                    <figcaption class="info-wrap">
                        <a href="@urlDetail" class="title">@item.Name</a>
                        <div class="price mt-1">@item.Price</div> <!-- price-wrap.// -->
                    </figcaption>
                </div>
            </div> <!-- col.// -->
        }
    </div> <!-- row.// -->
</section>


